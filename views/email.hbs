<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<title>Resumen de Cargos</title>
		<style>
			body { font-family: Arial, sans-serif; color: #333; margin: 0; padding:
			20px; } .container { max-width: 700px; margin: auto; background-color:
			#f9f9f9; padding: 20px; border: 1px solid #ddd; border-radius: 8px; } h1 {
			color: #d13137; text-align: center; } .section { margin-top: 20px; }
			.section-title { background-color: #d13137; color: white; padding: 10px;
			border-radius: 4px; } table { width: 100%; border-collapse: collapse;
			margin-top: 10px; } th, td { padding: 8px 12px; border: 1px solid #ccc;
			text-align: center; } th { background-color: #e9ecef; } .footer {
			text-align: center; margin-top: 30px; font-size: 0.9em; color: #666; }
		</style>
	</head>
	<body>
		<div class="container">
			<h1>Resumen de Carga</h1>

			<div class="section">
				<div class="section-title">Datos del Cliente</div>
				<p><strong>Nombre:</strong> {{fullname}}</p>
				<p><strong>Empresa:</strong> {{companyname}}</p>
				<p><strong>Correo:</strong> {{email}}</p>
				<p><strong>Teléfono:</strong> {{phone}}</p>
				<p><strong>Fecha:</strong> {{requestDate}}</p>
			</div>
			<div class="section">
				<div class="section-title">Detalles del envio</div>
				<p><strong>Origen:</strong>
					{{origin.country}}
					{{origin.defaultPostalCode}}
					{{origin.state}}
					{{origin.name}}</p>
				<p><strong>Destino:</strong>
					{{destination.country}}
					{{destination.defaultPostalCode}}
					{{destination.state}}
					{{destination.name}}</p>
				<p>
					<strong>Tipo de envio:</strong>
					{{searchType}}
					{{#if isMaritime}} {{maritimeType}} {{/if}}
				</p>
			</div>
			<div class="section">
				<div class="section-title">Detalles de la carga</div>
				{{#if isMaritime}}
					<table>
						<thead>
							<tr>
								<th>Tipo de Contenedor</th>
								<th>Cantidad</th>
							</tr>
						</thead>
						<tbody>
							{{#each cargos}}
								<tr>
									<td>{{containerType}}</td>
									<td>{{quantity}}</td>
								</tr>
							{{/each}}
						</tbody>

					</table>
				{{else}}
					<table>
						<thead>
							<tr>
								<th>Dimensiones (L × W × H)</th>
								<th>Peso</th>
								<th>Cantidad</th>
							</tr>
						</thead>
						<tbody>
							{{#each cargos}}
								<tr>
									<td>{{length}}
										×
										{{width}}
										×
										{{height}}
										{{unitDimensions}}</td>
									<td>{{weight}} {{unitWeight}}</td>
									<td>{{quantity}}</td>
								</tr>
							{{/each}}
						</tbody>

					</table>

					<p>
						<strong>Fecha de envio:</strong>
						{{date}}
					</p>
				{{/if}}

			</div>

			<div class="footer">oceanika.com</div>
		</div>
	</body>
</html>